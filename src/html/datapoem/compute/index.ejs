<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Datapoem</title>
<style>
body {
  font-family: "Helvetica Neue", "Helvetica", Arial, sans-serif;
  background-color: ##fff;
  text-align: center;
  color: #222;
  margin: 0;
  padding: 0;
  line-height: 1.1;
}
.container {
  position: absolute;
  height: 100%;
  min-height: 370px;
  max-height: 700px;
  padding: 3px;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
#text {
  padding-top: .3em;
  font-family: "Helvetica Neue", "Helvetica", Arial, sans-serif;
  background-color: transparent;
  border: none;
  font-size: 95px;
  text-align: center;
  outline: none;
  color: #222;
  width: 100%;
  height: 90%;
  resize: none;
}
#binary {
  position: absolute;
  pointer-events: none;
  text-align: left;
  bottom: 48%;
  left: 0;
  right: 0;
  margin: auto;
  font-size: 17px;
  width: 90%;
  max-width: 400px;
  color: #ccc;
  word-wrap: break-word;
}
.trues {
  position: absolute;
  pointer-events: none;
  bottom: .9em;
  left: 0;
  right: 0;
  margin: auto;
  width: 95%;
  font-size: 80px;
  text-align: center;
}
#percent {
  font-size: 100px;
}
@media only screen and (min-width: 750px) {
  .container {
    max-height: 450px;
  }
}
</style>
</head>
<body>
<section class="container">
  <textarea id="text">Your anger</textarea>
  <p id="binary"></p>
  <p class="trues"><span id="percent"></span> % true</p>

</section>
</body>
<script>
let d = (x) => document.getElementById(x);
let t = d("text");
let q = '';
location.search.split('&').forEach((x) => {
  let p = x.replace('?', '').split('=');
  if (p[0] == 't') q = p[1];
});
if (q) {
  t.innerText = decodeURIComponent(q);
}
let f = () => {
  let s = unescape(encodeURIComponent(t.value));
  let b = s.split('').map((c) => c.charCodeAt(0).toString(2).padStart(8, '0')).join('');
  let c1 = (b.match(/1/g) || []).length;
  let c0 = (b.match(/0/g) || []).length;
  let a = 100 * (c1 / (c1 + c0)) || 0;
  d("percent").innerHTML = parseFloat(a.toFixed(2));
  d('binary').innerHTML = b;
}
t.addEventListener("input", f);
f();
if (!/iPhone|iPad|iPod|Android/i.test(navigator.userAgent)) {
  t.focus();
  t.selectionStart = t.value.length;
}
</script>

</html>